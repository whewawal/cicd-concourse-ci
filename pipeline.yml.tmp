---
resources:
- name: github-resource
  type: git
  source:
    uri: https://github.com/whewawal/cicd-concourse-ci.git
    branch: master

image_resource:
  type: docker-image
  source: {repository: python}

jobs:
- name: python-hello-world
  public: true
  plan:
  - get: github-resource
  - task: hello-world
    config:
      platform: linux
      inputs:
      - name: github-resource
        path: .
      run:
        path: ./hello-world.sh

